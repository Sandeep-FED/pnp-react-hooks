    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--experimental-specifier-resolution=node",
                "${workspaceFolder}\\.bin\\start\\index.js"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "npm: build-debug",
        }
    ]
}