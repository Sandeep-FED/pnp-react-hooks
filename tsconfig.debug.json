{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "ESNext",
        "target": "es2019",
        "jsx": "react",
        "strictFunctionTypes": true,
        "declaration": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "mapRoot": ".",
    },
    "include": [
        "src/**/*",
        "debug/**/*",
        "msalSettings.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}