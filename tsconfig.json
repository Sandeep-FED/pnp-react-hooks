{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "ESNext",
        "target": "ES6",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "declaration": true,
        "moduleResolution": "Node",
        "outDir": "dist",
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist/**/*"
    ]
}