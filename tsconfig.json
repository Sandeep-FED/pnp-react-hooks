{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "ESNext",
        "target": "ESNext",
        "strictFunctionTypes": true,
        "declaration": true,
        "moduleResolution": "Node16",
        "strictNullChecks": true,
        "noEmitOnError": true,
        "allowJs": true,
        "checkJs": true,
        "emitDeclarationOnly": true,
        "outDir": "./types"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
