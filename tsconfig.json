{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "ESNext",
        "target": "es2019",
        "jsx": "react",
        "strictFunctionTypes": true,
        "declaration": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}